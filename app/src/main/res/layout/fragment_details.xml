                        android:paddingHorizontal="10dp"
                        android:background="@drawable/promoback"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/promoCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
